{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out", /* Folder do zapisu skompilowanych plików */
		"strict": true,
		"esModuleInterop": true, /* Umożliwia poprawny import modułów CommonJS i ES */
		"skipLibCheck": true /* Pomija sprawdzanie typów dla plików w node_modules */
	},
	"include": [
    "src/**/*.ts" // Include all source files
    // "src/test/**/*.ts" // Include test files
	],
	"exclude": ["node_modules", ".vscode"]
}
